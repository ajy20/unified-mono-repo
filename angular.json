{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "host": {
      "projectType": "application",
      "root": "projects/host",
      "sourceRoot": "projects/host/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-architects/native-federation:build",
          "options": {},
          "configurations": {
            "production": {
              "target": "host:esbuild:production"
            },
            "development": {
              "target": "host:esbuild:development",
              "dev": true
            }
          },
          "defaultConfiguration": "production"
        },
        "esbuild": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/host",
            "index": "projects/host/src/index.html",
            "browser": "projects/host/src/main.ts",
            "tsConfig": "projects/host/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/host/public",
                "output": "/"
              },
              {
                "glob": "federation.manifest*.json",
                "input": "projects/host/public",
                "output": "/"
              },
              {
                "glob": "staticwebapp.config.json",
                "input": "projects/host/src",
                "output": "/"
              }
            ],
            "styles": ["projects/host/src/styles.scss"],
            "polyfills": ["es-module-shims"]
          },
          "configurations": {
            "production": {
              "budgets": [
                { 
                  "type": "initial", 
                  "maximumWarning": "500kB", 
                  "maximumError": "1MB" 
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "projects/host/src/environments/environment.ts",
                  "with": "projects/host/src/environments/environment.development.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "target": "host:serve-original:development",
            "rebuildDelay": 0,
            "dev": true,
            "port": 0
          }
        },
        "serve-original": {
          "builder": "@angular/build:dev-server",
          "options": {
            "buildTarget": "host:esbuild:development",
            "port": 4200
          },
          "configurations": {
            "production": {
              "buildTarget": "host:esbuild:production"
            },
            "development": {
              "buildTarget": "host:esbuild:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "projects/host/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/host/public"
              }
            ],
            "styles": ["projects/host/src/styles.scss"],
            "scripts": []
          }
        }
      }
    },
    "products": {
      "projectType": "application",
      "root": "projects/products",
      "sourceRoot": "projects/products/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-architects/native-federation:build",
          "options": {},
          "configurations": {
            "production": {
              "target": "products:esbuild:production"
            },
            "development": {
              "target": "products:esbuild:development",
              "dev": true
            }
          },
          "defaultConfiguration": "production"
        },
        "esbuild": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/products",
            "index": "projects/products/src/index.html",
            "browser": "projects/products/src/main.ts",
            "tsConfig": "projects/products/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/products/public",
                "output": "/"
              },
              {
                "glob": "staticwebapp.config.json",
                "input": "projects/products/src",
                "output": "/"
              }
            ],
            "styles": ["projects/products/src/styles.scss"],
            "polyfills": ["es-module-shims"]
          },
          "configurations": {
            "production": {
              "baseHref": "/products/",
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "target": "products:serve-original:development",
            "rebuildDelay": 0,
            "dev": true,
            "port": 0
          }
        },
        "serve-original": {
          "builder": "@angular/build:dev-server",
          "options": {
            "buildTarget": "products:esbuild:development",
            "port": 4201
          },
          "configurations": {
            "production": {
              "buildTarget": "products:esbuild:production"
            },
            "development": {
              "buildTarget": "products:esbuild:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "projects/products/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/products/public"
              }
            ],
            "styles": ["projects/products/src/styles.scss"],
            "scripts": []
          }
        }
      }
    }
  }
}